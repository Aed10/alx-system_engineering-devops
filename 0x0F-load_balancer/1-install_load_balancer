#!/usr/bin/env bash
# Installs HAproxy on the server and sets up a load balancer
sudo apt-get update
sudo apt-get -y install haproxy
echo "

global
    log 127.0.0.1 local0 notice
    maxconn 2000
    user haproxy
    group haproxy

defaults
    log     global
    mode    http
    option  httplog
    option  dontlognull
    retries 3
    option redispatch
    timeout connect  5000
    timeout client  10000
    timeout server  10000

listen stats    
    bind *:80
    mode http
    stats enable
    stats uri /haproxy?stats
    balance roundrobin
    option httpclose
    option forwardfor
    server 267497-web-01    35.174.184.151
    server 267497-web-02    54.157.180.166" > test.conf
sudo haproxy -f test.conf